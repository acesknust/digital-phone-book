{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "esModuleInterop": true,
        "noImplicitReturns": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}